<h1>Edit Article</h1>

<form action="/articles/<%= @article.id %>" method="POST">
  <input type="hidden" name="_method" value="put">
  <fieldset>
    <legend>Type</legend>
    <% @article_types.each do |article_type| %>
      <input type="radio" name="article[article_type_id]" 
      value="<%= article_type.id %>" 
      <%= "checked" if article_type.id == @article.article_type_id %>>
      <%= article_type.name %><br><br>
    <% end %>
  </fieldset>
  <fieldset>
    <legend>Subtype</legend>
    <input type="text" name="article[subtype]" id="subtype" 
    value="<%= @article.subtype%>">
  </fieldset>
  <fieldset>
    <legend>Brand</legend>
    <input type="text" name="article[brand]" id="brand"
    value="<%= @article.brand %>">
  </fieldset>
  <fieldset>
    <legend>Color</legend>
    <input type="text" name="article[color]" id="color"
    value="<%= @article.color %>">
  </fieldset>
  <fieldset>
    <legend>Image URL</legend>
    <input type="text" name="article[image_url]" id="image_url"
    value="<%= @article.image_url %>">
  </fieldset>
  <br><br>
  <button type="submit" class="btn btn-large btn-warning">Submit</button>
</form>
