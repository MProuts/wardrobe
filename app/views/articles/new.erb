<h1>New <%= @type.capitalize %></h1>
<form action="../new" method="POST">
  <input type="hidden" name="article[article_type]" value="<%= @type %>">
  <p>
  <label for="subtype">Type</label><br />
  <input type="test" name="article[subtype]" id="subtype">
  </p>
  <p>
  <label for="brand">Brand</label><br />
  <input type="text" name="article[brand]" id="brand">
  </p>
  <p>
  <label for="color">Color</label><br />
  <input type="text" name="article[color]" id="color">
  </p>
  <label for="image_url">Image URL</label><br />
  <input type="text" name="article[image_url]" id="image_url">
  <input type="submit">
</form>

<form action="/upload" method="post" enctype="multipart/form-data">
  <p>
  <label for="image_upload">Upload</label><br />
  <input id="image_upload" type="file" name="my_file">
  </p>
  <input type="submit" value="Upload">
</form>
